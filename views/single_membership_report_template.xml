<odoo>
  <template id="report_single_membership_template">
    <t t-call="web.basic_layout">
        <t t-foreach="docs" t-as="doc">
            <div class="page">
                <h2 style="color:#2C3E50; border-bottom:1px solid #ccc; padding-bottom:5px;">
                    Membership Report
                </h2>
                <table class="table table-sm mt32" style="width:100%;">
                    <tr>
                        <td><strong>Memberâ€™s Name</strong></td>
                        <td><t t-esc="doc.partner_id.name"/></td>
                    </tr>
                    <tr>
                        <td><strong>Registration Date</strong></td>
                        <td><t t-esc="doc.registration_date"/></td>
                    </tr>
                    <tr>
                        <td><strong>Expiry Date</strong></td>
                        <td><t t-esc="doc.end_date"/></td>
                    </tr>
                    <tr>
                        <td><strong>Card ID</strong></td>
                        <td><t t-esc="doc.card_id"/></td>
                    </tr>
                    <tr>
                        <td><strong>Membership Status</strong></td>
                        <td>
                            <t t-if="doc.state == 'active'">Active</t>
                            <t t-elif="doc.state == 'expired'">Expired</t>
                            <t t-else=""><t t-esc="doc.state"/></t>
                        </td>
                    </tr>
                </table>
            </div>
        </t>
    </t>
</template>


<record id="action_report_single_memberships" model="ir.actions.report">
    <field name="name">Membership Report</field>
    <field name="model">library.membership</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">library_management.report_single_membership_template</field>
    <field name="report_file">library_management.report_single_membership_template</field>
    <field name="print_report_name">'Membership Report - %s' % (object.partner_id.name)</field>
</record>

</odoo> 
